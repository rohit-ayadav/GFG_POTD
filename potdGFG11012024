int n = S.length();
        string result = "";

        for (char digit : S) {
            while (!result.empty() && K > 0 && result.back() > digit) {
                result.pop_back();
                K--;
            }
            if (!result.empty() || digit != '0') {
                result.push_back(digit);
            }
        }

        while (!result.empty() && K > 0) {
            result.pop_back();
            K--;
        }

        return result.empty() ? "0" : result;
